{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Wolfram Language",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.wolfram",
				"match": "(\\b|(?<=_))(Sin|Cos|Tan|Module)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.wolfram",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.wolfram",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.block.wolfram",
			"begin": "\\(\\*",
			"end": "\\*\\)",
			"patterns": [
				{
					"include": "#comments"
				}
			]
		}
	},
	"scopeName": "source.wolfram"
}